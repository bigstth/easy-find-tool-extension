{
    "manifest_version": 3,
    "name": "Easy find Tool",
    "version": "1.5",
    "description": "Save the words you frequently search for so you can easily access them with a click, rather than typing them out each time.",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "open_extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+E"
            },
            "description": "Open the extension popup"
        }
    },
    "icons": {
        "16": "iconza.png",
        "48": "iconza.png",
        "128": "iconza.png"
    },
    "permissions": ["activeTab", "storage", "scripting"],
    "short_name": "Easy find Tool"
}
